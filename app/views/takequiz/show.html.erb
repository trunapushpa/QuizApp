<%= form_for :arr, controller: "takequiz", action: "submit", method: "post", class: "form-horizontal" do |form|%>
    <% @questions.each do |question| %>
        <div class="well bs-component">
        <h2><%= question.description %></h2>
        <div class="form-group">
          <div class="checkbox">
            <label>
              <%= form.check_box((question.id).to_s+'[1]') %>  <%= question.option1 %>
            </label>
          </div>
        </div>
          <div class="form-group">
            <div class="checkbox">
              <label>
                <%= form.check_box((question.id).to_s+'[2]') %>  <%= question.option2 %>
              </label>
            </div>
          </div>
          <div class="form-group">
            <div class="checkbox">
              <label>
                <%= form.check_box((question.id).to_s+'[3]') %>  <%= question.option3 %>
              </label>
            </div>
          </div>
          <div class="form-group">
            <div class="checkbox">
              <label>
                <%= form.check_box((question.id).to_s+'[4]') %>  <%= question.option4 %>
              </label>
            </div>
          </div>
        </div>
    <% end %>
    <%= form.submit "Submit", :name => nil, type: "submit", class: "btn btn-primary"%>
<% end %>
